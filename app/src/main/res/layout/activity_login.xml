<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.raniamofeed.songsbank.login_Register.Login">

    <ImageView
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="56dp"
        android:background="#00000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/splashsceern"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/lo4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Songs Bank"
        android:textColor="@color/login"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageButton"
        app:layout_constraintStart_toStartOf="@+id/imageButton"
        app:layout_constraintTop_toBottomOf="@+id/imageButton"
        app:layout_constraintVertical_bias="0.026" />


    <EditText
        android:id="@+id/userlogin"
        android:layout_width="248dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/cardView"
        android:layout_alignLeft="@+id/passlogin"
        android:layout_alignStart="@+id/passlogin"
        android:layout_marginTop="32dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/avatar"
        android:gravity="center"
        android:padding="10dp"
        android:textDirection="ltr"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lo4"
        tools:ignore="UnknownId" />
    <EditText
        android:id="@+id/passlogin"
        android:layout_width="248dp"
        android:layout_height="40dp"
        android:layout_above="@+id/userlogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/locked2"
        android:ems="10"
        android:textDirection="ltr"
        android:padding="10dp"
        android:gravity="center"
        android:hint="Password"
        android:inputType="textPassword"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userlogin" />

    <Button
        android:id="@+id/forgetpassword"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#00000000"
        android:text="@string/pass"
        android:textColor="@color/login"
        app:layout_constraintEnd_toEndOf="@+id/logiin"
        app:layout_constraintStart_toStartOf="@+id/logiin"
        app:layout_constraintTop_toBottomOf="@+id/logiin" />

    <Button
        android:id="@+id/logiin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="60dp"
        android:layout_weight="1"
        android:textColor="#fff"
        android:background="@drawable/login"
        android:gravity="center"
        android:padding="15dp"
        android:text="Login"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passlogin" />

    <Button
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_above="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:background="#00000000"
        android:text="Register Here."
        android:textColor="@color/login"
        app:layout_constraintBottom_toTopOf="@+id/logiin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.83"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passlogin" />





</android.support.constraint.ConstraintLayout>
